<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
    
<beans>
	<!-- Lets create bean for Greetings -->
	<bean id="greeting" class="com.spring.core.Greetings">
		<property name="message" value="Hello Spring"></property>
	</bean>
	
	<bean id="eventHandler" class="com.spring.core.event.UserDefinedEventHandler"></bean>
	
	<bean id="eventPublisher" class="com.spring.core.event.publisher.UserDefinedEventPublisher"></bean>
</beans>